{
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "no-console": 0,
    "no-constant-condition": ["error", { "checkLoops": false }]
  },
  "env": {
    "es6": true,
    "node": true,
  },
  "extends": [
    "eslint:recommended"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 6
  }
}
